<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogMainStyle">

    <TextView
        android:id="@+id/txv_title_dialog_disconnect_device"
        style="@style/DialogTitle"
        android:text="@string/dialog_title_disconnect_device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_disconnect_dialog_disconnect_device"
        style="@style/TextButtonStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_cancel_dialog_disconnect_device"
        android:nextFocusDown="@+id/btn_cancel_dialog_disconnect_device"
        android:text="@string/dialog_button_disconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_dialog_disconnect_device" />

    <Button
        android:id="@+id/btn_cancel_dialog_disconnect_device"
        style="@style/TextButtonStyle"
        android:layout_marginTop="8dp"
        android:nextFocusDown="@+id/btn_disconnect_dialog_disconnect_device"
        android:text="@string/dialog_button_cancel"
        app:layout_constraintEnd_toStartOf="@+id/btn_disconnect_dialog_disconnect_device"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_dialog_disconnect_device" />

</android.support.constraint.ConstraintLayout>
