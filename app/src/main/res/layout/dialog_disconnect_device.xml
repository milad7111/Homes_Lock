<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/txv_title_dialog_disconnect_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:gravity="start|center_vertical"
        android:text="@string/dialog_title_disconnect_device"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_disconnect_dialog_disconnect_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_cancel_dialog_disconnect_device"
        android:background="@color/transparent"
        android:focusable="true"
        android:nextFocusDown="@+id/btn_cancel_dialog_disconnect_device"
        android:text="@string/dialog_button_disconnect"
        android:textColor="@color/md_white_1000"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_dialog_disconnect_device"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_dialog_disconnect_device" />

    <Button
        android:id="@+id/btn_cancel_dialog_disconnect_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        android:focusable="true"
        android:nextFocusDown="@+id/btn_disconnect_dialog_disconnect_device"
        android:text="@string/dialog_button_cancel"
        android:textColor="@color/md_white_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_dialog_disconnect_device" />

</android.support.constraint.ConstraintLayout>
