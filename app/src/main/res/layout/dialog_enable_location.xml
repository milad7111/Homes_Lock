<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogMainStyle">

    <TextView
        android:id="@+id/txv_title_dialog_enable_location"
        style="@style/DialogTitle"
        android:text="Enable location status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_yes_dialog_enable_location"
        style="@style/TextButtonStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_no_dialog_enable_location"
        android:nextFocusDown="@+id/btn_no_dialog_enable_location"
        android:text="YES"
        app:layout_constraintEnd_toStartOf="@+id/btn_no_dialog_enable_location"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_dialog_enable_location" />

    <Button
        android:id="@+id/btn_no_dialog_enable_location"
        style="@style/TextButtonStyle"
        android:layout_marginTop="8dp"
        android:nextFocusDown="@+id/btn_yes_dialog_enable_location"
        android:text="NO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_dialog_enable_location" />

</android.support.constraint.ConstraintLayout>
