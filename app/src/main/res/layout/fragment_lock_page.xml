<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:clickable="true"
    android:focusable="true">

    <com.andexert.library.RippleView
        android:id="@+id/rpl_lock_status_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txv_device_name_lock_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_centered="true">

        <ImageView
            android:id="@+id/img_lock_status_lock_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_lock_status_symbol_lock_page"
            android:focusable="false"
            app:srcCompat="@drawable/ic_homes_lock_open" />

    </com.andexert.library.RippleView>

    <ImageView
        android:id="@+id/img_lock_status_lock_page_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/rpl_lock_status_lock_page"
        app:layout_constraintEnd_toEndOf="@+id/rpl_lock_status_lock_page"
        app:layout_constraintTop_toTopOf="@+id/rpl_lock_status_lock_page"
        app:layout_constraintBottom_toBottomOf="@+id/rpl_lock_status_lock_page"
        android:contentDescription="@string/content_description_login_screen_login_fragment"
        android:focusable="false"
        app:srcCompat="@drawable/ic_ring_unlock" />

    <ImageView
        android:id="@+id/img_lock_status_lock_page_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/rpl_lock_status_lock_page"
        app:layout_constraintEnd_toEndOf="@+id/rpl_lock_status_lock_page"
        app:layout_constraintTop_toTopOf="@+id/rpl_lock_status_lock_page"
        app:layout_constraintBottom_toBottomOf="@+id/rpl_lock_status_lock_page"
        android:contentDescription="@string/content_description_login_screen_login_fragment"
        android:focusable="false"
        app:srcCompat="@drawable/ic_lock_open" />

    <RelativeLayout
        android:id="@+id/rll_valid_data_status_lock_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_valid_data_status_lock_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:contentDescription="@string/content_description_valid_status_lock_page"
            android:focusable="false"
            app:srcCompat="@drawable/ic_sync_problem" />

        <TextView
            android:id="@+id/txv_valid_data_status_lock_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/img_valid_data_status_lock_page"
            android:layout_toRightOf="@+id/img_valid_data_status_lock_page"
            android:focusable="false"
            android:textColor="@color/md_yellow_A200"
            android:textSize="14sp"
            android:textStyle="italic|bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txv_device_name_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:text="@string/fragment_text_view_device_name"
        android:textColor="@color/md_grey_500"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txv_brief_status_lock_page"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txv_new_update_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:textColor="@color/md_yellow_500"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/txv_brief_status_lock_page"
        app:layout_constraintStart_toEndOf="@+id/txv_device_name_lock_page"
        tools:text="new update" />

    <TextView
        android:id="@+id/txv_brief_status_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:text="@string/fragment_text_view_data_not_synced"
        android:textColor="@color/md_grey_500"
        app:layout_constraintBottom_toTopOf="@+id/lnr_action_images_lock_page"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txv_device_type_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:text="@string/fragment_text_view_device_type_lock_page"
        android:textColor="@color/md_grey_500"
        app:layout_constraintBottom_toTopOf="@+id/lnr_action_images_lock_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/lnr_action_images_lock_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_battery_status_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:srcCompat="@drawable/ic_valid_battery_zero" />

        <com.andexert.library.RippleView
            android:id="@+id/rpv_connected_devices_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rv_centered="true">

            <ImageView
                android:id="@+id/img_connected_devices_lock_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:srcCompat="@drawable/ic_invalid_connected_devices_exist" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rpv_ble_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rv_centered="true">

            <ImageView
                android:id="@+id/img_ble_lock_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:srcCompat="@drawable/ic_ble_disconnect" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rpv_manage_members_lock_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:rv_centered="true">

            <ImageView
                android:id="@+id/img_manage_members_lock_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                app:srcCompat="@drawable/ic_manage_members_disable" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rpv_more_info_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rv_centered="true">

            <ImageView
                android:id="@+id/img_more_info_lock_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:srcCompat="@drawable/ic_valid_more_info" />

        </com.andexert.library.RippleView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>