<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000">

    <ImageView
        android:id="@+id/img_lock_status_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_description_img_lock_status_symbol_lock_page"
        android:focusable="false"
        android:src="@drawable/ic_lock_idle"
        app:layout_constraintBottom_toTopOf="@+id/txv_lock_name_lock_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_lock_name_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:textColor="@color/md_grey_500"
        app:layout_constraintBottom_toTopOf="@+id/txv_security_alarm_lock_page"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lock Name" />

    <TextView
        android:id="@+id/txv_new_update_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:textColor="@color/md_yellow_500"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/txv_security_alarm_lock_page"
        app:layout_constraintStart_toEndOf="@+id/txv_lock_name_lock_page"
        tools:text="new update" />

    <TextView
        android:id="@+id/txv_security_alarm_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:text="Data Not Synced"
        android:textColor="@color/md_grey_500"
        app:layout_constraintBottom_toTopOf="@+id/lnr_action_images_lock_page"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txv_temperature_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:textColor="@color/md_grey_300"
        app:layout_constraintBottom_toTopOf="@+id/lnr_action_images_lock_page"
        app:layout_constraintEnd_toStartOf="@+id/txv_humidity_lock_page"
        tools:text="25" />

    <TextView
        android:id="@+id/txv_humidity_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:textColor="@color/md_grey_300"
        app:layout_constraintBottom_toTopOf="@+id/lnr_action_images_lock_page"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="30" />

    <ImageView
        android:id="@+id/img_temperature_celsius_lock_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_description_img_temperature_celsius_lock_page"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/txv_humidity_lock_page"
        app:layout_constraintEnd_toStartOf="@+id/txv_humidity_lock_page"
        app:layout_constraintStart_toEndOf="@+id/txv_temperature_lock_page"
        tools:srcCompat="@drawable/ic_valid_temperature_celsius" />

    <ImageView
        android:id="@+id/img_water_percent_lock_page"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/content_description_img_water_percent_lock_page"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/img_temperature_celsius_lock_page"
        app:layout_constraintEnd_toEndOf="@+id/txv_humidity_lock_page"
        app:layout_constraintStart_toStartOf="@+id/txv_humidity_lock_page"
        tools:srcCompat="@drawable/water_percent" />

    <LinearLayout
        android:id="@+id/lnr_action_images_lock_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_battery_status_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:srcCompat="@drawable/ic_valid_battery_zero" />

        <ImageView
            android:id="@+id/img_connection_status_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:srcCompat="@drawable/ic_invalid_wifi_off" />

        <ImageView
            android:id="@+id/img_ble_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:srcCompat="@drawable/ic_ble_disconnect" />

        <ImageView
            android:id="@+id/img_manage_members_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:srcCompat="@drawable/ic_manage_members_disable" />

        <ImageView
            android:id="@+id/img_more_info_lock_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:srcCompat="@drawable/ic_more_info" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>