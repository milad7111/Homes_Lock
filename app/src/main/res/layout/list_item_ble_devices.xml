<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="BleDevice"
            type="com.projects.company.homes_lock.models.datamodels.ble.ScannedDeviceModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_ble_devices_name"
                style="@style/ble_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@{BleDevice.name}" />

            <TextView
                android:id="@+id/txv_ble_devices_mac_address"
                style="@style/ble_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{BleDevice.macAddress}" />

        </LinearLayout>

        <!--<android.support.v7.widget.AppCompatImageView-->
            <!--android:id="@+id/img_ble_devices_rssi"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/ic_signal_wifi_level_0" />-->

    </LinearLayout>

</layout>